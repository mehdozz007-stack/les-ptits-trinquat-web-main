{
  "name": "les-ptits-trinquat-api",
  "version": "1.0.0",
  "description": "API Cloudflare Workers pour Les P'tits Trinquat",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create les-ptits-trinquat-db",
    "db:migrate": "wrangler d1 execute les-ptits-trinquat-db --file=migrations/0001_initial_schema.sql",
    "db:migrate:local": "wrangler d1 execute les-ptits-trinquat-db --local --file=migrations/0001_initial_schema.sql",
    "db:seed": "wrangler d1 execute les-ptits-trinquat-db --file=migrations/0002_seed_admin.sql",
    "db:seed:local": "wrangler d1 execute les-ptits-trinquat-db --local --file=migrations/0002_seed_admin.sql",
    "tail": "wrangler tail"
  },
  "dependencies": {
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "typescript": "^5.0.0",
    "wrangler": "^4.61.1"
  }
}
